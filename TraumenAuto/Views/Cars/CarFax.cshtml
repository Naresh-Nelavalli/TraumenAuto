@using TraumenAuto.Models;
@using DataLayer;
@model TraumenAuto.Models.TotalCarDetailsVM

@{
    ViewBag.Title = "CarFax";
}

<h2>CarFax Report </h2>
<li style="color:green" ><b> @(Model.OneCarData.Maker) @(Model.OneCarData.Name)</b> </li>


<div>
    <h4>TotalCarDetailsVM</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OneCarfacts.AccidentReported)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OneCarfacts.Vin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OneCarfacts.YearofPurchase)
            </th>
            <th></th>
        </tr>
               
        
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.OneCarfacts.AccidentReported)
                    @if (Model.OneCarfacts.AccidentReported==true)
                    {  @Html.DisplayText("Yes")}
                   
                </td>
                <td style ="@(Model.OneCarfacts.AccidentReported==true ? "color:red":null)">
                      @Html.DisplayFor(modelItem => Model.OneCarfacts.Vin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.OneCarfacts.YearofPurchase)
                </td>
                
            </tr>
        

    </table>
    <dl class="dl-horizontal">
    </dl>
</div>

<script type="text/javascript"> var count = 1;
    </script> 
<div>
    @foreach(var item in Model.OneCarfacts.Owner)
    {
    <table border="2" width="1000">
        <tr border ="1" style="color:green">
            <th colspan="5"><center>
           Owner- <script type="text/javascript"> document.write(count); count++;</script>
                </center>
             </th>
            
        </tr>

        <tr border="2">
            <td colspan="2" style="color:midnightblue">
               <b> Owner Type:</b>
                @Html.DisplayFor(modelItem => item.OwnerType)
            </td>
            <td colspan="1" style="color:midnightblue">
                <b>  State: </b>
                @Html.DisplayFor(modelItem => item.OwnerState)
            </td>
            <td colspan="2" style="color:midnightblue">
                <b> Purchase Date:</b>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
         </tr>

        <tr height ="30" border="2">
           
            <td style="color:brown"> <b> Mileage  </b> </td>
            <td style="color:brown"> <b> Maintenance date   </b></td>
            <td style="color:brown"> <b> Comments </b>  </td>
            <td style="color:brown"> <b> Source  </b> </td>
        </tr>

        @foreach(var md in item.Mdetails){
        <tr>
            <td width="200">&nbsp;&nbsp;  @Html.DisplayFor(modelItem => md.Mileage)  </td>
            <td width="200">&nbsp;&nbsp;  @Html.DisplayFor(modelItem => md.Mdate)  </td>
            <td width="200">&nbsp;&nbsp;  @Html.DisplayFor(modelItem => md.Comments) </td>
            <td width="200">&nbsp;&nbsp;  @Html.DisplayFor(modelItem => md.source) </td>
        </tr>
        }
    </table>
        <br />
        <br />

    }
</div>
<p>
    @Html.ActionLink("HOME", "Index") |
    @Html.ActionLink("Back to List", null, null, null, new { href = Request.UrlReferrer })
</p>
